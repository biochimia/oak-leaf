import testing ;

rule test ( command : test-name : requirements * : sources * )
{
    sources ?= $(test-name).cpp ;

    if ( $(command) in compile compile-fail )
    {
        return [ $(command) $(sources) : $(requirements) : $(test-name) ] ;
    }
    else
    {
        return [ $(command) $(sources) : : : $(requirements) : $(test-name) ] ;
    }
}
